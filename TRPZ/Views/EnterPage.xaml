<Page x:Class="TRPZ.EnterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPZ"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="EnterPage">

    <StackPanel Width="350" Height="400">
        <Label Margin="85, 50, 0,5" FontSize="14" Foreground="#FF838585">Log In</Label>
        <Border BorderBrush="LightGray" Width="170" Height="30" Margin="0, 0,0,0" BorderThickness="1" CornerRadius="2">
            <TextBox Name="loginBox" Width="170" Height="30" Text="User Name" Foreground="Gray"/>
        </Border>
        <Border BorderBrush="LightGray" Width="170" Height="30"  VerticalAlignment="Top" Margin="0, 0,0,0" BorderThickness="1" CornerRadius="2">
            <TextBox Name="passwordBox" Width="170" Height="30" Text="Password" Foreground="Gray" />
        </Border>
        <Border Background="#FF2580DA" Width="180" Height="40"  VerticalAlignment="Top" Margin="0, 50,0,0" BorderThickness="1" CornerRadius="4">
            <Button Name="loginButton" Content="Log in" Foreground="White" Background="#FF2580DA" Height="40" Width="180" Command="{Binding LoginCommandProperty}" />
        </Border>
    </StackPanel>
</Page>
