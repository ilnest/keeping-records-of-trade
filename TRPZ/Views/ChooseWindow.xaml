<Window x:Class="TRPZ.ModelView.Commands.ChooseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TRPZ.ModelView.Commands"
        mc:Ignorable="d"
        Title="ChooseWindow" Height="268.767" Width="410.137">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <ListBox Name="listOfItems" Grid.Column="0"/>
        <StackPanel Grid.Column="1">
            <Border Grid.Column="1" BorderBrush="#FF7CA2D8" Margin="0, 10, 0 ,0" BorderThickness="2" CornerRadius="3" Height="30" Width="50">
                <TextBox Name="desiredNumber" Height="30" Width="50" FontSize="14" Text="0"/>
            </Border>
            <Border Grid.Column="1" BorderBrush="#FF7CA2D8" Margin="0, 10, 0 ,0" BorderThickness="1" CornerRadius="3" Height="30" Width="70">
                <Button Name="ChooseBtn" Height="30" Width="70" Background="#FF7CA2D8" Foreground="White" Content="Выбрать" FontWeight="Bold" FontSize="12" Click="ChooseBtn_Click" />
            </Border>
        </StackPanel>
    </Grid>
</Window>
