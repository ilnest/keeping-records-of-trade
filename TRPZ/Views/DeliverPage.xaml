<Page x:Class="TRPZ.Views.DeliverPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TRPZ.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="DeliverPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Border BorderBrush="#FF7CA2D8" BorderThickness="2" Margin="0 20 0 0" CornerRadius="3" Height="400" Width="450"  HorizontalAlignment="Center">
                <DataGrid Name="dataGrid"/>
            </Border>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Border BorderBrush="#FF7CA2D8" BorderThickness="2" CornerRadius="3" Height="30" Width="30" Margin="20, 10, 0, 0">
                <TextBox Name="amountBox" Height="30" Width="30" />
            </Border>
            <Border BorderBrush="#FF7CA2D8" BorderThickness="2" CornerRadius="3" Height="40" Width="100" Margin="0, 50, 0, 0">
                <Button Name="executeBtn" Background="#FF7CA2D8" Foreground="White" FontSize="14" FontWeight="Bold" Content="Выполнить" Click="executeBtn_Click"/>
            </Border>
        </StackPanel>
    </Grid>
</Page>
